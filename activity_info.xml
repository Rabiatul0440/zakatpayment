<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#5a9aa0"
    android:padding="16dp">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/titleText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Learn More About Zakat"
                android:textColor="#2C3E50"
                android:textSize="28sp"
                android:textStyle="bold"
                android:gravity="center"
                android:padding="16dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp"
                android:background="@drawable/card_background"
                android:elevation="4dp"
                android:layout_marginBottom="16dp">

                <TextView
                    android:id="@+id/section1Title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="What is Zakat?"
                    android:textColor="#34495E"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp" />
                <TextView
                    android:id="@+id/section1Content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Zakat is one of the Five Pillars of Islam and is a mandatory act of giving a specific percentage of wealth to charity. It purifies your income and wealth and supports those in need."
                    android:textColor="#616161"
                    android:textSize="16sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp"
                android:background="@drawable/card_background"
                android:elevation="4dp"
                android:layout_marginBottom="16dp">

                <TextView
                    android:id="@+id/section2Title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Why is Zakat Important?"
                    android:textColor="#34495E"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp" />
                <TextView
                    android:id="@+id/section2Content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Zakat helps to reduce poverty, supports the community, and fosters a sense of social responsibility. It ensures the redistribution of wealth and helps those who are less fortunate."
                    android:textColor="#616161"
                    android:textSize="16sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp"
                android:background="@drawable/card_background"
                android:elevation="4dp"
                android:layout_marginBottom="16dp">

                <TextView
                    android:id="@+id/section3Title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="What is the Law of Issuing Zakat?"
                    android:textColor="#34495E"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp" />
                <TextView
                    android:id="@+id/section3Content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="The law of zakat has mu'tamad proofs (القطع) from the point of guidance (الدلالة) and its sickle. It makes the law of zakat clear and easy to understand from a religious point of view."
                    android:textColor="#616161"
                    android:textSize="16sp" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</RelativeLayout>
